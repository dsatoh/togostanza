<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <title>{{metadata.[stanza:label]}}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css" crossorigin="anonymous">
    <script type="module" src="./{{metadata.[@id]}}.js" async></script>

    <script type="module">
      import createHelpApp from './-help-app.js';

      const metadata = {{{to-json metadata}}};

      createHelpApp(metadata).mount('#app');
